{
  "compilerOptions": {
    // 编译为ES2020版本
    "target": "ES2020",
    // 指定ES模块使用的语言版本
    "module": "ESNext",
    // 指定编译环境的 API，包含 ES2020 标准、DOM API 及 DOM 的可迭代特性
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    /* 构建 */
    "useDefineForClassFields": true, // 发出符合 ECMAScript 标准的类字段
    "skipLibCheck": true, // 跳过对所有 .d.ts 文件进行类型检查
    "noEmit": true, // 不编译文件，只校验类型
    "moduleResolution": "bundler",  // 模块解析模式
    "isolatedModules": true,  // 确保每个文件都有自己的模块
    "jsx": "react-jsx", // 启用 JSX
    "jsxImportSource": "vitarx", // 导入源
    /* 语法检测 */
    "strict": true, // 严格模式
    "noUnusedLocals": true, // 未使用的变量报告为错误
    "noUnusedParameters": true, // 未使用的参数报告为错误
    "noFallthroughCasesInSwitch": true, // 为 switch 语句中的故障案例启用错误报告
    "forceConsistentCasingInFileNames": true, // 确保导入时的大小写正确
    /* 别名路径配置 */
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
